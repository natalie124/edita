include mixins

block variables
- let mainTitle = "Эдита";
- let description = "Шубы на любой размер. Норковые шубы. Шубы из астрагана. Шубы из каракуля. Мужские кожаные куртки. Качественный мех. Гибкие скидки. Гарантия. Чипирование.";

doctype html
html( lang="ru" )
  head
    meta( charset="UTF-8" )
    title #{mainTitle} !{title && "| " + title}
    meta( name="description" content= "" + description )
    meta( name="viewport" content="width=device-width, initial-scale=1.0" )
    link( rel="stylesheet" href="css/style.min.css" )

    link( rel="preload" href="fonts/circe-regular.woff2" as="font" type="font/woff2" crossorigin )
    link( rel="preload" href="fonts/circe-bold.woff2" as="font" type="font/woff2" crossorigin )
  body
    .wrapper
      include ../components/header/header

      main
        block content

      include ../components/footer/footer

    script( src="js/jquery-3.5.1.min.js" )
    script( src="js/vendor.min.js" )
    script( src="js/script.js" )
